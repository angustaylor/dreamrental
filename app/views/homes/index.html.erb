<p id="notice"><%= notice %></p>

<div class=main-container>
  <h1 class=>Reserve your dream rental now</h1>

  <%= form_tag homes_path, method: :get do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control d-inline-flex col-10 mt-12",
      placeholder: "Search for a home"
    %>
    <%= submit_tag "Search", class: "btn btn-primary" %>
  <% end %>
  <!-- <form novalidate="novalidate" class="simple_form search" action="/" accept-charset="UTF-8" method="get"><input name="utf8" type="hidden" value="&#x2713;" />
    <div class="search-form-control form-group">
      <input class="form-control string required" type="text" name="search[query]" id="search_query" />
      <button name="button" type="submit" class="btn btn-flat">
        <i class="fas fa-search"></i> Search
      </button>
    </div>
  </form>
  -->
  <div id="map"
      style="width: 100%; height: 400px;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>

  <div class=container>
    <div class="cards">
      <% @homes.each do |home| %>
        <div class="col-12 col-md-6 col-lg-3">
          <div class="card" style="background-image: cl_image_tag(home.photos.first.key, crop: :fill);">
            <div class="card-description">
              <p><%= home.address %>, <%= home.city %></p>
               <p><%= home.region %>, <%= home.country %></p>
              <p>           
                <i class="fas fa-bed"> <%= home.bedrooms %></i> 
                <i class="fas fa-bath"> <%= home.bathrooms %></i>
              </p>
            </div>
            <%= link_to 'Show', home %>
          </div>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>
<br>