<div class="pt-32px pb-32">
  <h3> Current Bookings </h3>
</div>
<div class="main-container">
  <div class="row">
    <% @bookings.each do |booking| %>
        <% if booking.user == current_user || current_user.present? && current_user.admin? %>
        <div class="col-12 col-md-6 col-lg-3">
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), home.photo">
            <div class="card-description">
              <p><%= booking.start_date %></p>
              <p><%= (booking.end_date - booking.start_date).to_i %> days</p>
            </div>
            <%= link_to 'Show', booking %>
          </div>
        </div>
        <% end %>
      <% end %>
  </div>
</div>
